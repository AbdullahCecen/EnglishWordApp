<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/drawbleradius"
    android:layout_margin="20dp"
    android:padding="10dp">


        <TextView
            android:id="@+id/kelime_Ying"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/drawbleradius"
            android:drawableStart="@drawable/english"
            android:gravity="center_vertical"
            android:text="Ingilizce"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/kelime_Ytur"
            app:layout_constraintStart_toStartOf="@+id/kelime_Ytur"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/kelime_Yimage"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/gallery_icon" />

        <TextView
            android:id="@+id/kelime_Ytur"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/drawbleradius"
            android:drawableStart="@drawable/turkiye"
            android:gravity="center_vertical"
            android:text="Türkçe Karşılık"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/kelime_Yimage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>